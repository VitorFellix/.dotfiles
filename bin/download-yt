#!/bin/bash

command -v yt-dlp >/dev/null 2>&1 || { echo "yt-dlp nÃ£o encontrado"; exit 1; }
# command -v aria2c >/dev/null 2>&1 || { echo "aria2c nÃ£o encontrado"; exit 1; }

output_path="~/Videos/youtube/"

if [ $# -eq 0 ]; then
  echo "Uso: download-yt URL [URL...]"
  exit 1
fi

yt-dlp \
  -f "bestvideo[fps>=60]+bestaudio/best" \
  --merge-output-format mp4 \
  --retries 10 \
  --fragment-retries 10 \
  --paths "${output_path}" \
  --no-part \
  --no-mtime \
  "$@"
