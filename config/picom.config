# General settings
backend = "glx";
vsync = true;
refresh-rate = 0; # auto detect
mark-wmwin-focused = true;
mark-ovredir-focused = true;
use-ewmh-active-win = true;
detect-transient = true;
detect-client-leader = true;
use-damage = true;

# Rounded borders
corner-radius = 3;

# Exclusions
shadow-exclude = [
  "class_g = 'RimWorldLinux'",
  "class_g = 'org.mozilla.firefox'",
  "class_g = 'Polybar'",
  "window_type = 'popup_menu'",
  "window_type = 'dropdown_menu'",
  "window_type = 'tooltip'",
  "window_type = 'utility'",
  "window_type = 'dock'",
  "_NET_WM_WINDOW_TYPE@:32a = '_NET_WM_WINDOW_TYPE_POPUP'",
  "_NET_WM_WINDOW_TYPE:d = '_NET_WM_WINDOW_TYPE_DOCK'",
];

blur-exclude = [
  "class_g = 'RimWorldLinux'",
  "class_g = 'org.mozilla.firefox'",
  "class_g ?= 'firefox' && argb",
  "window_type = 'popup_menu'",
  "window_type = 'dropdown_menu'",
  "window_type = 'tooltip'",
  "window_type = 'utility'",
  "window_type = 'dock'"
  "_GTK_FRAME_EXTENTS@:c",
  "_NET_WM_WINDOW_TYPE@:32a = '_NET_WM_WINDOW_TYPE_POPUP'",
  "_NET_WM_WINDOW_TYPE:d = '_NET_WM_WINDOW_TYPE_DOCK'",
];

corner-radius-exclude = [
  "window_type = 'popup_menu'",
  "window_type = 'dropdown_menu'",
  "window_type = 'tooltip'",
  "window_type = 'utility'",
  "window_type = 'dock'"
];

# Blur settings
blur: {
    method = "gaussian";
    size = 10;
    deviation = 5.0;
}

# Fade in/out windows
fading = true;
fade-in-step = 0.04;
fade-out-step = 0.04;
fade-delta = 10;

# Enable animations for floating window movement
animations = true;
animation-stiffness = 300; # lower = bouncier
animation-window-mass = 0.3;
animation-dampening = 10.0;

# Shadows (optional)
shadow = true;
shadow-radius = 12;
shadow-opacity = 0.5;
shadow-offset-x = -5;
shadow-offset-y = -5;
