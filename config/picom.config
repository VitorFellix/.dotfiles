# General settings
backend = "glx";
vsync = true;
# mark-wmwin-focused = true;
# mark-ovredir-focused = true;
use-ewmh-active-win = true;
detect-rounded-corners = true;
detect-transient = true;
detect-client-leader = true;

# Rounded corners
corner-radius = 6;
round-borders = 6;
rounded-corners-exclude = [
	"window_type = 'dock'"
];

# Only changes what has changed
use-damage = true;

# Shadows
shadow = true;
shadow-color ="#202030";
shadow-radius = 16;
shadow-opacity = .6;
shadow-offset-x = 0;
shadow-offset-y = 0;
shadow-exclude = [
  "class_g ?= 'i3-frame'"
];

# Fading
fading = true;
fade-delta = 8;
# fade-in-step = .1;
# fade-out-step = .1;

# Transparency / Opacity
frame-opacity = 1;
inactive-opacity = 1;
inactive-dim-fixed = true;
inactive-opacity-override = false;
detect-client-opacity = true;
opacity-rule = [
  "70:class_g = 'i3bar'"
];

wintypes:
{
  tooltip = { fade = true; shadow = true; opacity = 1; focus = true; full-shadow = false; };
  dock = { shadow = false;}
  dnd = { shadow = false; }
  menu = { shadow = false; blur-background = false; corner-radius = 0; }
  popup_menu = { opacity = 1; shadow = false; }
  dropdown_menu = { opacity = 1; shadow = false; }
};

blur:
{
	method = "dual_kawase";
	size = 9;
	# strength = 10;
};
