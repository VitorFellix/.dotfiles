# i3 config file (v4)
#
# Please see https://i3wm.org/docs/userguide.html for a complete reference!

# Alt
set $mod1key Mod1
set $mod1 bindsym Mod1
set $smod1 bindsym Mod1+Shift
set $cmod1 bindsym Mod1+Control
set $scmod1 bindsym Mod1+Shift+Control

# Caps lock key is used for most frequent actions
set $mod3key Mod3
set $mod3 bindsym Mod3
set $smod3 bindsym Mod3+Shift
set $cmod3 bindsym Mod3+Control
set $scmod3 bindsym Mod3+Shift+Control

# Windows key is used for deep management / less frequent actions
set $mod4key Mod4
set $mod4 bindsym Mod4
set $smod4 bindsym Mod4+Shift
set $cmod4 bindsym Mod4+Control
set $scmod4 bindsym Mod4+Shift+Control

# Font
set $fontName jetbrainsmono
set $fontSize 12

font pango:$fontName $fontSize

# Set keybinding
exec --no-startup-id xmodmap ~/.Xmodmap

# Start XDG autostart .desktop files using dex. See also
# https://wiki.archlinux.org/index.php/XDG_Autostart
exec --no-startup-id dex-autostart --autostart --environment i3

# Initialize opentabletdriver daemon
exec --no-startup-id otd-daemon

# The combination of xss-lock, nm-applet and pactl is a popular choice, so
# they are included here as an example. Modify as you see fit.
# xss-lock grabs a logind suspend inhibit lock and will use i3lock to lock the
# screen before suspend. Use loginctl lock-session to lock your screen.
exec --no-startup-id xss-lock --transfer-sleep-lock -- betterlockscreen -l dimblur --off 60 -- -e

# Start picom compositor
exec_always --no-startup-id picom -b --config ~/.config/picom/config
# --experimental-backends

# NetworkManager is the most popular way to manage wireless networks on Linux,
# and nm-applet is a desktop environment-independent system tray GUI for it.
exec --no-startup-id nm-applet

# Use pactl to adjust volume in PulseAudio.
set $refresh_i3status killall -SIGUSR1 i3status
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +10% && $refresh_i3status
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -10% && $refresh_i3status
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle && $refresh_i3status
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle && $refresh_i3status

# Use Mouse+$mod4 to drag floating windows to their wanted position
floating_modifier $mod4key

# Open most used apps
$mod4+Return exec --no-startup-id kitty
$mod4+g exec --no-startup-id google-chrome
$mod4+e exec --no-startup-id thunar
$mod4+i exec --no-startup-id kitty nvim ~/.dotfiles/config/i3.config
$mod4+n exec --no-startup-id kitty nvim ~/.dotfiles/nvim/lua/config

# Kill focused window
$mod3+x kill

# Rofi configuration
$mod3+space exec --no-startup-id rofi -show combi -run-command "i3-msg exec '{cmd}'" -show-icons

# Change focus
$mod3+h focus left
$mod3+j focus down
$mod3+k focus up
$mod3+l focus right

# Move focused window
$smod3+h move left
$smod3+j move down
$smod3+k move up
$smod3+l move right

# Splits orientation
$mod3+c split h
$mod3+v split v

# Enter fullscreen mode for the focused container
# bindsym $mod4+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
# bindsym $mod4+s layout stacking
# bindsym $mod4+w layout tabbed
# bindsym $mod4+s layout toggle split

# toggle tiling / floating
$smod4+space floating toggle

# change focus between tiling / floating windows
# bindsym $mod4+space focus mode_toggle

# focus the parent container
# bindsym $mod4+a focus parent

# focus the child container
# bindsym $mod4+d focus child

# Define names for default workspaces for which we configure key bindings later on.
# We use variables to avoid repeating the names in multiple places.
set	$ws1 " a "
set	$ws2 " s "
set	$ws3 " d "
set	$ws4 " f "
set	$ws5 " q "
set	$ws6 " w "
set	$ws7 " e "
set	$ws8 " r "

# switch to workspace
$mod3+a workspace $ws1
$mod3+s workspace $ws2
$mod3+d workspace $ws3
$mod3+f workspace $ws4
$mod3+q workspace $ws5
$mod3+w workspace $ws6
$mod3+e workspace $ws7
$mod3+r workspace $ws8

# move focused container to workspace
$smod3+a move container to workspace $ws1
$smod3+s move container to workspace $ws2
$smod3+d move container to workspace $ws3
$smod3+f move container to workspace $ws4
$smod3+q move container to workspace $ws5
$smod3+w move container to workspace $ws6
$smod3+e move container to workspace $ws7
$smod3+r move container to workspace $ws8

# Move workspaces to where they should be
workspace $ws1 output primary
workspace $ws2 output primary
workspace $ws3 output primary
workspace $ws4 output primary
workspace $ws5 output nonprimary
workspace $ws6 output nonprimary
workspace $ws7 output nonprimary
workspace $ws8 output nonprimary

# reload the configuration file
$smod4+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
$smod4+r restart
# exit i3 (logs you out of your X session)
# bindsym $smod4+e exec --no-startup-id "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -B 'Yes, exit i3' 'i3-msg exit'"

set $bg #282828
set $red #cc241d
set $green #98971a
set $yellow #d79921
set $blue #458588
set $purple #b16286
set $aqua #689d68
set $gray #a89984
set $darkgray #1d2021
set $lightgray #bdae93

# class                 border	   |backgr	   |text	   |indicator  |child_border
client.focused          $lightgray	$lightgray	$bg			$yellow		$darkgray
client.focused_inactive $darkgray	$darkgray	$lightgray	$yellow 	$darkgray
client.unfocused        $darkgray	$darkgray 	$lightgray	$yellow 	$darkgray
client.urgent           $red		$red	 	$white		$red		$red

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
		position top
        status_command i3status -c /home/$USER/.config/i3status/config
		separator_symbol " -:- "
		padding  2px 10px
		tray_output none

		colors {
			background				$bg
			statusline				$lightgray
			separator				$yellow
			#						border		backgr		text
			focused_workspace		$bg			$yellow		$bg
       		inactive_workspace  	$darkgray	$darkgray	$lightgray
       		active_workspace    	$darkgray 	$darkgray 	$lightgray
       		urgent_workspace    	$red		$red $bg
		}
}

# Gaps
gaps inner 12
gaps outer 48
smart_gaps off

# Keybinding lockscreen
$smod4+x exec --no-startup-id betterlockscreen -l dimblur --off 60 -- -e

# Assign apps to workspace
# for_window [class="kitty"] move to workspace $ws1
# for_window [class="google-chrome"] move to workspace $ws2
for_window [class="Spotify"] move to workspace $ws3
for_window [class="Discord"] move to workspace $ws4
for_window [class="Krita"] move to workspace $ws5
for_window [class="PureRef"] move to workspace $ws6

# Window border appearance
default_border pixel 2
default_floating_border pixel 2

# Set connected monitor resolution and scale
exec --no-startup-id "bash ~/.dotfiles/setup/set-resolution.sh && ~/.dotfiles/setup/set-wallpaper.sh && betterlockscreen -u ~/Pictures/wallpapers"

# Set wallpaper
$mod3+t exec --no-startup-id feh --no-fehbg --bg-fill --randomize ~/Pictures/wallpapers
$mod3+y exec --no-startup-id feh --no-fehbg --bg-fill --randomize ~/Pictures/wallpapers

# Night light
# TODO: script for switch on/off using $mod3+n
exec --no-startup-id redshift -m randr -l -25.410760:-49.207110 -b 1:.8 -t 6500:3000

# Screenshots
bindsym Print exec --no-startup-id maim "~/Pictures/screenshots/$(date -Iseconds).png"
$mod4+Print exec --no-startup-id maim --window $(xdotool getactivewindow) "~/Pictures/screenshots/$(date -Iseconds).png"
bindsym Shift+Print exec --no-startup-id maim --select "~/Pictures/screenshots/$(date -Iseconds).png"

# Clipboard Screenshots
bindsym Ctrl+Print exec --no-startup-id maim | xclip -selection clipboard -t image/png
$mod4+Ctrl+Print exec --no-startup-id maim --window $(xdotool getactivewindow) | xclip -selection clipboard -t image/png
bindsym Ctrl+Shift+Print exec --no-startup-id maim --select | xclip -selection clipboard -t image/png

