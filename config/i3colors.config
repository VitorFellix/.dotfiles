# Font
set $fontName JetBrainsMono Nerd Font
font pango:$fontName 10

# Colors
set $back       #1e1e1e
set $back_alt   #2e2e2e
set $fore       #e0e0e0
set $primary    #c0c0c0
set $secondary  #a0a0a0
set $inactive   #5c5c5c
set $urgent     #ff5f5f
set $trans      #00000000
set $border     #2e2e2e

# Window colors
# class                 border      background  text        indicator   child_border
client.focused          $border     $back       $primary    $secondary  $border
client.focused_inactive $border     $back       $inactive   $inactive   $border
client.unfocused        $border     $back       $inactive   $inactive   $border
client.urgent           $urgent     $urgent     $fore       $urgent     $urgent
client.placeholder      $back       $back       $inactive   $back       $back
client.background       $back

# Gaps
gaps inner 12
gaps outer 32
smart_gaps off

# Window border appearance
default_border pixel 3
default_floating_border pixel 3

# Additional i3 tweaks for consistency
focus_follows_mouse no
popup_during_fullscreen smart
workspace_auto_back_and_forth yes

# Use border color for better visual feedback
hide_edge_borders none

# Window rules
for_window [class=".*"] border pixel 3
for_window [urgent=latest] focus
